QPushButton {
    background-color: white;
    color: black;
    border: 2px solid #4CAF50;
    border-radius: 10px;
    padding: 10px;
}

QPushButton::hover {
    background-color: #4CAF50;
}

QPushButton::disabled {
    background-color: #F44336;
    color: #E7E7E7;
    border: 2px solid #F44336;
    opacity: 0.2;
}
